@model CrudWebApi.Models.NgpUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>

</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content">
            <div class="card">

                <div class="row">
                    <div class="col-md-12">
                        <div class="card-body">
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "login", }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <h4 class="mb-3 f-w-400" style="font-weight:600;">SAMPLE SYSTEM</h4>



                                <div class="form-group mb-4">
                                    <label style="text-align:left" class="fa fa-user"> USERNAME</label>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", required = "required", type = "text", name = "username", id = "Username", style = "font-size:15px;" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger custom-input" })
                                </div>
                                <div class="form-group mb-4">
                                    <label class="fa fa-key"> PASSWORD</label>

                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", name = "password", type = "Password", id = "Password", style = "font-size:15px;" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger custom-input" })

                                </div>

                                <div class="text-left" style="font-size:12px; ">
                                    <input type="checkbox" onclick="myFunction()"> Show Password
                                </div>
                                @Html.HiddenFor(m => m.Id)
                                <br />
                                <br />
                                <button class="btn btn-primary" type="submit">SIGN IN</button>
                                <br />

                                <div class="custom-val" style="color:red;">
                                    <br />
                                    @ViewBag.Message
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

</html>


@*SHOW PASSWORD*@
<script>
    function myFunction() {
        var x = document.getElementById("Password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>