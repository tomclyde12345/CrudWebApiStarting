@*CREATE CONTRACTOR IN MODAL *@
<div id="createcontractorModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h4 class="card-title d-flex justify-content-between modal-title" style="padding:0;">Create Contractor</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <form id="createcontractor">



                    <div class="row">

                        <div class="col-sm-4">

                            <div class="form-group">
                                <label for="name">ContractorName</label>
                                <input type="text" class="form-control" name="ContractorName" id="ContractorName" value="" />
                            </div>
                            <div class="form-group">
                                <label for="name">ProjectName</label>
                                <input type="text" class="form-control" name="ProjectName" id="ProjectName" value="" required>
                            </div>
                            <div class="form-group">
                                <label for="name">SiteCode</label>
                                <input type="text" class="form-control" name="SiteCode" id="SiteCode" value="" />
                            </div>
                            <div class="form-group">
                                <label for="name">AreaContracted</label>
                                <input type="text" class="form-control" name="AreaContracted" id="AreaContracted" value="" required>
                            </div>
                        </div>
                        <div class="col-sm-4">

                            <div class="form-group">
                                <label for="name">AddressMunicipality</label>
                                <input type="text" class="form-control" name="AddressMunicipality" id="AddressMunicipality" value="" />
                            </div>
                            <div class="form-group">
                                <label for="name">AddressBarangay</label>
                                <input type="text" class="form-control" name="AddressBarangay" id="AddressBarangay" value="" required>
                            </div>

                            <div class="form-group">
                                <label for="name">LocationMunicipality</label>
                                <input type="text" class="form-control" name="LocationMunicipality" id="LocationMunicipality" value="" required>
                            </div>
                            <div class="form-group">
                                <label for="name">LocationBarangay</label>
                                <input type="text" class="form-control" name="LocationBarangay" id="LocationBarangay" value="" required>
                            </div>


                        </div>



                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="name">LocationSitio</label>
                                <input type="text" class="form-control" name="LocationSitio" id="LocationSitio" value="" required>
                            </div>

                            <div class="form-group">
                                <label for="RoleID">Penro</label>
                                <select class="form-control" style="width:100%" name="Penro" id="Penro" required>
                                    <option value="">Please Select a Goverment Agency</option>
                                    <option value="City Penro">City Penro</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="CenroId">CenroId</label>
                                <select class="form-control" style="width:100%" name="CenroId" id="CenroId" required>


                                    <option value="">Please Select a Role Agency</option>

                                    <option value="Cenro-PuertoPrincesa">Cenro-PuertoPrincesa</option>
                                    <option value="Cenro-Quezon">Cenro-Quezon</option>
                                    <option value="Cenro-BrookesPoint">Cenro-BrookesPoint</option>
                                    <option value="Cenro-Conron">Cenro-Conron</option>
                                    <option value="Cenro-Taytay">Cenro-Taytay</option>
                                    <option value="Cenro-Roxas">Cenro-Roxas</option>


                                </select>
                            </div>


                            <div class="form-group">
                                <label for="RoleID">Region</label>
                                <select class="form-control" style="width:100%" name="Region" id="Region" required>
                                    <option value="">Please Select a Region</option>
                                    <option value="RegionIV-B">RegionIV-B</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="year_Estb">year_Estb</label>
                                <input type="text" class="form-control" name="year_Estb" id="year_Estb" value="" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">

                        <button class="btn btn-primary btn-sm " id="btnsubmit" type="submit">Save</button>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>






