@model CrudWebApi.ViewModel.ContractorVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}






<section id="input-with-icons">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Create Contractor</h4>
                </div>
                <div class="text-end m-3">
                    <button type="button" class="btn btn-primary" style="border-radius:20px;" onclick="location.href ='@Url.Action("Index","Contractor")'">Go to list</button>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Save", "Contractor"))
                    {
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">

                                    <label> ContractorName </label>


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.contractor_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.contractor_name)

                                </div>
                                <div class="form-group">

                                    <label> contractor_type </label>



                                    <select class="form-control" style="width:100%" name="contractor_type" id="contractor_type">
                                        <option value="">Please Select a contractor_type</option>
                                        <option value="Individual">Individual</option>
                                        <option value="Group">Group</option>

                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">

                                    <label>Address Municipality</label>


                                    @if (ViewBag.MunicipalityList != null)
                                    {
                                        @Html.DropDownListFor(model => model.address_municipality, ViewBag.MunicipalityList as SelectList, "--Select Municipality--", new { @class = "form-control", required = "required", @id = "MunicipalityId" })
                                    }
                                </div>



                                <div class="form-group">

                                    <label>Address Barangay</label>



                                    @Html.DropDownListFor(model => model.address_barangay, new SelectList(" "), "--Select Barangay--", new { @class = "form-control", @id = "BarangayId" })
                                </div>
                            </div>
                        </div>


                        <div style="padding: 2% 0;">
                            <div class="text-center">

                                <input type="submit" value="CREATE" class="btn btn-primary m-1" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#MunicipalityId").change(function () {
            $.get("/Contractor/GetBarangayLList", { MunicipalityId: $("#MunicipalityId").val() }, function (data) {
                $("#BarangayId").empty();
                $.each(data, function (index, row) {
                    $("#BarangayId").append("<option value='" + row.BarangayId + "'>" + row.BarangayName + "</option>")
                });
            });
        })
    });
</script>





